<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:buttonStyle">@style/button</item>
        <item name="android:textViewStyle">@style/textView</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="colorControlHighlight">@color/black</item>
        <item name="toolbarStyle">@style/ToolBarStyle</item>
        <item name="tooltipForegroundColor">@color/secondaryDarkColor</item>
        <item name="titleTextColor">@color/primaryTextColor</item>
        <item name="actionOverflowButtonStyle">@style/MyOverflowButtonStyle</item>
    </style>

    <style name="MyOverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/primaryTextColor</item>
    </style>

    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="android:textColorSecondary">@color/primaryTextColor</item>
        <item name="actionMenuTextColor">@color/primaryTextColor</item>
    </style>


    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="button" parent="@android:style/Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/small_margin</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">0.2</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="buttonNavigate" parent="button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_navigate</item>
        <item name="android:layout_margin">@dimen/tiny_margin</item>
        <item name="android:textSize">@dimen/big_text_size</item>
    </style>

    <style name="modalCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/card</item>
    </style>

    <style name="textView" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="titleStyle" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textStyle">bold</item>

    </style>


    <style name="descriptionStyle" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/ice</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">3</item>
    </style>

    <style name="infoTextStyle" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/ice</item>
        <item name="android:textSize">@dimen/default_text_size</item>
    </style>

    <style name="infoWarnTextStyle" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorAccentWarn</item>
        <item name="android:textSize">@dimen/default_text_size</item>
    </style>



    <style name="normalTextStyle" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">@dimen/default_text_size</item>
    </style>


    <style name="textInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/primaryTextColor</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:background">@color/primaryColor</item>
    </style>

    <style name="radioButton">
        <item name="android:background">@drawable/radio</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="Platform.ThemeOverlay.AppCompat.Dark" >
        <!--<item name="colorPrimary">@color/primaryComplementaryColor</item>-->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="AppTheme">
        <!--<item name="colorPrimary">@color/primaryComplementaryColor</item>-->

        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="customCardView" parent="CardView.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">@dimen/default_radius</item>
        <item name="android:elevation">3dp</item>


        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--card_view:cardCornerRadius="@dimen/default_radius"-->
    </style>

    <color name="black">#000000</color>
</resources>
