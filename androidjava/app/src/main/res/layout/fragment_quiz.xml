<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="@dimen/default_radius"
    card_view:cardUseCompatPadding="true"
    android:layout_margin="@dimen/tiny_margin"
    app:cardBackgroundColor="@color/primaryDarkColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/primaryDarkColor">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
        android:layout_margin="@dimen/tiny_margin"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/brazil"
            android:contentDescription="TODO" />

        <LinearLayout
            style="@style/container"
            android:orientation="horizontal"
            android:background="@color/primaryColor">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/item_number"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    style="@style/normalTextStyle"
                    android:layout_margin="@dimen/tiny_margin"
                    android:text="@string/dummy_quiz_question"
                    android:textColor="@color/primaryTextColor"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">





            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="@dimen/tiny_margin"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_check_white_24dp"
                    android:contentDescription="TODO" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    style="@style/TextAppearance.AppCompat.Small"
                    android:layout_margin="@dimen/tiny_margin"
                    android:text="Concordo"
                    android:textColor="@color/primaryTextColor"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="@dimen/tiny_margin"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/dislike1"
                    android:contentDescription="TODO" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    style="@style/TextAppearance.AppCompat.Small"
                    android:layout_margin="@dimen/tiny_margin"
                    android:text="Discordo"
                    android:textColor="@color/primaryTextColor"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="@dimen/tiny_margin"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_warning_white_48dp"
                    android:contentDescription="TODO" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    style="@style/TextAppearance.AppCompat.Small"
                    android:layout_margin="@dimen/tiny_margin"
                    android:text="Sem Opiniao"
                    android:textColor="@color/primaryTextColor"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="@dimen/tiny_margin"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_share_black_48dp"
                    android:contentDescription="TODO" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    style="@style/TextAppearance.AppCompat.Small"
                    android:layout_margin="@dimen/tiny_margin"
                    android:text="Compartilhar"
                    android:textColor="@color/primaryTextColor"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
