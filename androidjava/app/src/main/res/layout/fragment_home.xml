<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".user.ProfileFragment"
    android:background="@color/primaryColor">

    <!--<include layout="@layout/layout_home_header"/>-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnProductDetail"
                style="@style/buttonNavigate"
                android:drawableLeft="@drawable/ic_star_white_24dp"
                android:text="Product Details Fragment" />

            <Button
                android:id="@+id/btnLocation"
                style="@style/buttonNavigate"
                android:drawableLeft="@drawable/ic_location_on_white_24dp"
                android:text="Location Fragment"
                />

            <Button
                android:id="@+id/btnNotification"
                style="@style/buttonNavigate"
                android:drawableLeft="@drawable/ic_notifications_white_24dp"
                android:text="Notification Fragment"
                android:enabled="false"/>

            <Button
                android:id="@+id/btnSettings"
                style="@style/buttonNavigate"
                android:drawableLeft="@drawable/ic_settings_white_24dp"
                android:text="Settings Fragment" />

            <Button
                android:id="@+id/btnUserProfile"
                style="@style/buttonNavigate"
                android:drawableLeft="@drawable/ic_account_circle_white_24dp"
                android:text="User Profile Fragment" />

            <Button
                android:id="@+id/btnUserSignup"
                style="@style/buttonNavigate"
                android:drawableLeft="@drawable/ic_person_white_24dp"
                android:text="User Sign up Fragment"/>

            <Button
                android:id="@+id/btnMailScreen"
                style="@style/buttonNavigate"
                android:drawableLeft="@drawable/ic_mail_white_24dp"
                android:text="Mail Fragment"
                android:enabled="false"/>

            <Button
                android:id="@+id/btnHelpScreen"
                style="@style/buttonNavigate"
                android:drawableLeft="@drawable/ic_help_white_24dp"
                android:text="Help Fragment" />

            <Button
                android:id="@+id/btnLoginScreen"
                style="@style/buttonNavigate"
                android:drawableLeft="@drawable/ic_assignment_ind_white_24dp"
                android:text="Login Fragment" />

            <Button
                android:id="@+id/btnDashboard"
                style="@style/buttonNavigate"
                android:drawableLeft="@drawable/ic_dashboard_white_24dp"
                android:text="Dashboard Fragment"
                android:enabled="false"/>

        </LinearLayout>
    </ScrollView>



</LinearLayout>